                                <td>
                                    @x.LastName
                                </td>


                                <td>
                                    @x.PhoneNumber
                                </td>


                                <td>
                                    @x.EmailAddress
                                </td>


                                <td>
                                    <a href="~/Home/Delete/@x.CustomerID">Delete Customer </a>
