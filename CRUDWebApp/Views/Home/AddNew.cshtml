@model CRUDWebApp.Models.AccountEntityModels
@{
    ViewBag.Title = "AddNew";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table>

        <tr>

            <td>

                <table>

                    <tr>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <td width="150px">First Name</td>


                        <td>
                            @Html.HiddenFor(m => m.CustomerID)
                            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </td>

                    </tr>
                    <tr>

                        <td width="150px">Last Name</td>


                        <td>
                            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </td>

                    </tr>

                    <tr>

                        <td>Phone Number</td>


                        <td>
                            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </td>

                    </tr>


                    <tr>

                        <td width="150px">Email Address</td>


                        <td>
                            @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.EmailAddress)
                        </td>

                    </tr>


                    


                    <tr>

                        <td></td>


                        <td>
                            <input type="submit" value="Save" />

                        </td>

                        @Html.ActionLink("Back to List", "Index")
                    </tr>

                </table>

            </td>

        </tr>

    </table>


    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

}