<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        <table class="">

            <tr>
                <a href="~/Offer/AddNew">Add New </a>
            </tr>


            <tr>

                <td>

                    <table border="0" cellpadding="4" cellspacing="1" bgcolor="#D8D8D8" class="table table-bordered table-responsive">

                        <tr>

                            <td width="100" align="center" class="header_bg">

                                Offer Name

                            </td>
                            <td width="100" align="center" class="header_bg">

                                Menu Item

                            </td>

                            <td width="400" align="center" class="header_bg">Action</td>

                        </tr>


                        @{
                            string COLOR1 = "#ffffff";
                            string COLOR2 = "#f1f1f1";
                            string bgcolor = "#ffffff";
                        }

                        @foreach (var x in ViewBag.offerinfo)
                        {
                            bgcolor = bgcolor == COLOR1 ? COLOR2 : COLOR1;


                            <tr bgcolor="@bgcolor">


                                <td>
                                    @x.OfferName
                                </td>

                                <td>
                                    @x.MenuItemName
                                </td>



                                <td>
                                    <a href="~/Offer/Delete/@x.OfferID">Delete Offer </a>
                                    &nbsp;&nbsp;
                                    <a href="~/Offer/AddNew/@x.OfferID">Edit Offer </a>
                                </td>

                            </tr>

                        }
                    </table>

                </td>

            </tr>

        </table>
